# ===== CONFIGURACIÓN PARA VERCEL =====
# Copia estas variables en tu dashboard de Vercel

# ===== FLASK CONFIGURATION =====
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=tu-clave-secreta-super-segura-aqui

# ===== GOOGLE GEMINI API =====
GOOGLE_API_KEY=tu-google-api-key-aqui
GEMINI_MODEL=gemini-1.5-flash

# ===== DATABASE =====
# Para producción, usa una base de datos externa como PostgreSQL
DATABASE_URL=postgresql://usuario:password@host:puerto/database
# O para SQLite (no recomendado en producción)
SQLALCHEMY_DATABASE_URI=sqlite:///app.db

# ===== SECURITY =====
JWT_SECRET_KEY=tu-jwt-secret-key-aqui
BCRYPT_LOG_ROUNDS=12

# ===== CORS =====
CORS_ORIGINS=https://tu-dominio.vercel.app,https://tu-dominio-personalizado.com

# ===== MAIL CONFIGURATION (opcional) =====
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-app-password

# ===== RATE LIMITING =====
RATELIMIT_STORAGE_URL=redis://localhost:6379

# ===== LOGGING =====
LOG_LEVEL=INFO

# ===== VERTEX AI (para migración futura) =====
GOOGLE_CLOUD_PROJECT_ID=tu-proyecto-id
GOOGLE_CLOUD_LOCATION=us-central1
VERTEX_AI_ENABLED=false