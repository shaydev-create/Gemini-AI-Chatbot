# =============================================================================
# 🔐 ARCHIVO DE VARIABLES DE ENTORNO - GEMINI AI CHATBOT
# =============================================================================
# IMPORTANTE: Copia este archivo como '.env' y configura tus valores reales
# NO subas el archivo .env al repositorio (está en .gitignore)

# --- Configuración de Flask ---
FLASK_APP="run.py"
FLASK_ENV="development"
SECRET_KEY="tu-clave-secreta-super-segura-aqui-cambiar-en-produccion"
DEBUG=True
TESTING=False

# --- Configuración JWT ---
JWT_SECRET_KEY="tu-jwt-clave-secreta-aqui-diferente-a-secret-key"
JWT_ACCESS_TOKEN_EXPIRES=3600

# --- Configuración de la Base de Datos ---
# Desarrollo (SQLite):
DATABASE_URL="sqlite:///instance/app.db"

# Producción (PostgreSQL):
# DATABASE_URL="postgresql://usuario:contraseña@host:5432/nombre_db"

# --- Configuración de Google Gemini AI ---
GEMINI_API_KEY="tu-api-key-de-gemini-aqui"
GOOGLE_APPLICATION_CREDENTIALS="ruta/a/tu/service-account.json"

# --- Configuración de Redis (Opcional) ---
REDIS_URL="redis://localhost:6379/0"
# REDIS_PASSWORD="tu-redis-password-si-es-necesario"

# --- Configuración de Seguridad ---
BCRYPT_LOG_ROUNDS=12
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE="Lax"
CSRF_ENABLED=True

# --- Configuración de Servidor ---
PORT=3000
HOST="0.0.0.0"
WORKERS=4

# --- Configuración de Logging ---
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"

# --- Configuración de Email (Opcional) ---
MAIL_SERVER="smtp.example.com"
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME="tu-email@example.com"
MAIL_PASSWORD="tu-password-de-email"
MAIL_DEFAULT_SENDER="noreply@example.com"

# --- Configuración de Gunicorn (Producción) ---
GUNICORN_CMD_ARGS="--workers=4 --worker-class=gevent"

# --- Variables de Docker (Solo para docker-compose) ---
# Cambiar estos valores en producción por seguridad
POSTGRES_DB="gemini_chatbot"
POSTGRES_USER="gemini_user"
POSTGRES_PASSWORD="CAMBIAR-EN-PRODUCCION-POR-PASSWORD-SEGURO"