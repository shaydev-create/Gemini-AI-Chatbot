# Variables de entorno para Gemini AI Chatbot
# Copia este archivo como .env y configura tus valores

# === CONFIGURACIÓN PRINCIPAL ===
FLASK_ENV=production
SECRET_KEY=tu_secret_key_muy_seguro_aqui
JWT_SECRET_KEY=tu_jwt_secret_key_aqui

# === API DE GEMINI ===
GEMINI_API_KEY=tu_gemini_api_key_aqui
GOOGLE_API_KEY=tu_gemini_api_key_aqui

# === BASE DE DATOS ===
DATABASE_URL=sqlite:///instance/gemini_chatbot.db

# === CONFIGURACIÓN DE CORREO ===
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_password_de_aplicacion

# === UPLOADS ===
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# === SEGURIDAD ===
SECURE_HEADERS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# === PWA ===
PWA_ENABLED=true
VAPID_PUBLIC_KEY=tu_vapid_public_key
VAPID_PRIVATE_KEY=tu_vapid_private_key

# === LOGS ===
LOG_LEVEL=INFO

# === CACHE ===
CACHE_TYPE=simple

# === DESARROLLO (solo para desarrollo local) ===
# FLASK_ENV=development
# DEBUG=true