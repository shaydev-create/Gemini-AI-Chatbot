# 🔐 CONFIGURACIÓN GEMINI AI CHATBOT CERTIFICADO
# Ejemplo de configuración - NO incluir credenciales reales

# ===== CONFIGURACIÓN BÁSICA =====
FLASK_ENV=development
FLASK_DEBUG=True

# ===== CLAVES DE SEGURIDAD =====
# Generar con: python -c "import secrets; print(secrets.token_urlsafe(32))"
# IMPORTANTE: Genera claves seguras de 64 caracteres para producción
SECRET_KEY=tu_secret_key_muy_seguro_aqui_64_caracteres
JWT_SECRET_KEY=tu_jwt_secret_key_aqui_64_caracteres

# ===== GOOGLE GEMINI API =====
# Obtener de: https://makersuite.google.com/app/apikey
# IMPORTANTE: Reemplaza con tu API key real de Gemini
GOOGLE_API_KEY=tu_gemini_api_key_aqui
GEMINI_API_KEY=tu_gemini_api_key_aqui
GEMINI_MODEL=gemini-2.0-flash-001
GEMINI_VISION_MODEL=gemini-2.0-flash-001
GEMINI_PRO_MODEL=gemini-2.0-flash-thinking-001

# ===== GOOGLE CLOUD VERTEX AI =====
# Configuración para Vertex AI (migración recomendada)
GOOGLE_CLOUD_PROJECT_ID=gen-lang-client-0952676857
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=./credentials/vertex-ai-key.json
VERTEX_AI_ENABLED=True
VERTEX_AI_MODEL=gemini-1.5-flash
VERTEX_AI_MAX_DAILY_COST=50.0

# ===== BASE DE DATOS =====
# SQLite para desarrollo local
DATABASE_URL=sqlite:///gemini_chatbot.db

# PostgreSQL para producción (recomendado)
# DATABASE_URL=postgresql://usuario:password@localhost:5432/gemini_chatbot
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=gemini_chatbot
POSTGRES_USER=gemini_user
POSTGRES_PASSWORD=tu_password_seguro
POSTGRES_ENABLED=False

# ===== CONFIGURACIÓN DE EMAIL =====
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=noreply@geminichatbot.com

# ===== CONFIGURACIÓN DE ARCHIVOS =====
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=104857600

# ===== CONFIGURACIÓN DE SEGURIDAD =====
SECURE_HEADERS_ENABLED=True
CSRF_PROTECTION_ENABLED=True
RATE_LIMITING_ENABLED=True

# ===== PWA (Progressive Web App) =====
PWA_ENABLED=true
# IMPORTANTE: Genera claves VAPID para notificaciones push
VAPID_PUBLIC_KEY=tu_vapid_public_key_base64_aqui
VAPID_PRIVATE_KEY=tu_vapid_private_key_base64_aqui

# ===== CONFIGURACIÓN DE LOGGING =====
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log

# ===== CONFIGURACIÓN DE CORS =====
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# ===== CONFIGURACIÓN DE CACHE =====
CACHE_TYPE=simple
