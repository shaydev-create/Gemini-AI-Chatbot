# --- Configuración de la Aplicación ---
FLASK_APP="app.py"
FLASK_ENV="development"
SECRET_KEY="una-clave-secreta-muy-segura-y-dificil-de-adivinar"
DEBUG=True
TESTING=False

# --- Configuración de la Base de Datos (PostgreSQL) ---
DATABASE_URL="postgresql://user:password@db:5432/gemini_chatbot_db"

# --- Configuración de Redis ---
REDIS_URL="redis://redis:6379/0"

# --- Configuración de Google Gemini AI ---
GEMINI_API_KEY=


# --- Configuración de Gunicorn ---
GUNICORN_CMD_ARGS="--workers=4 --worker-class=gevent"

# --- Configuración de Logging ---
LOG_LEVEL="INFO"

# --- Configuración de Seguridad ---
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE="Lax"
CSRF_ENABLED=True
JWT_SECRET_KEY="otra-clave-secreta-para-jwt"

# --- Configuración de Email (Opcional) ---
MAIL_SERVER="smtp.example.com"
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME="tu-email@example.com"
MAIL_PASSWORD="tu-password-de-email"
MAIL_DEFAULT_SENDER="noreply@example.com"
