# üîê CONFIGURACI√ìN GEMINI AI CHATBOT - ARCHIVO DE EJEMPLO
# IMPORTANTE: Renombra este archivo a .env y configura tus valores reales
# NO incluyas credenciales reales en archivos que se suban a GitHub

# ===== CONFIGURACI√ìN B√ÅSICA =====
FLASK_ENV=development
FLASK_DEBUG=True

# ===== CLAVES DE SEGURIDAD =====
# Generar con: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=tu_secret_key_muy_seguro_aqui
JWT_SECRET_KEY=tu_jwt_secret_key_aqui

# ===== GOOGLE GEMINI API =====
# Obtener de: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=tu_gemini_api_key_aqui
GEMINI_API_KEY=tu_gemini_api_key_aqui
GEMINI_MODEL=gemini-pro

# ===== BASE DE DATOS =====
DATABASE_URL=sqlite:///gemini_chatbot.db

# ===== CONFIGURACI√ìN DE EMAIL =====
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=noreply@geminichatbot.com

# ===== CONFIGURACI√ìN DE ARCHIVOS =====
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=104857600

# ===== CONFIGURACI√ìN DE SEGURIDAD =====
SECURE_HEADERS_ENABLED=True
CSRF_PROTECTION_ENABLED=True
RATE_LIMITING_ENABLED=True

# ===== CONFIGURACI√ìN PWA =====
PWA_ENABLED=True
VAPID_PUBLIC_KEY=tu_vapid_public_key_aqui
VAPID_PRIVATE_KEY=tu_vapid_private_key_aqui

# ===== CONFIGURACI√ìN DE LOGGING =====
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log

# ===== CONFIGURACI√ìN DE CORS =====
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# ===== CONFIGURACI√ìN DE CACHE =====
CACHE_TYPE=simple