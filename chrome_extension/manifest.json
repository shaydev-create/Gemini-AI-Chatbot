{
  "manifest_version": 3,
  "name": "ðŸš€ Gemini AI Futuristic Chatbot",
  "short_name": "GeminiFuture",
  "version": "2.0.0",
  "description": "AI-powered chatbot with Google Gemini. Smart conversations, document analysis, and voice control in a futuristic interface.",
  "homepage_url": "https://github.com/shaydev-create/Gemini-AI-Chatbot",
  "privacy_policy": "http://127.0.0.1:5000/privacy_policy",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_16.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "declarativeNetRequest",
    "offscreen"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self';"
  }
}
